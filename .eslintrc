{
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "max-len": [1, 120, 2, {"ignoreComments": true}],
      "linebreak-style": 0,
      "class-methods-use-this": 0,
      "react/prop-types": 0
    },
    "extends": ["airbnb-base", "plugin:react/recommended"],
    "env": {
        "browser": true,
        "node": true,
        "jest": true
    }
}
